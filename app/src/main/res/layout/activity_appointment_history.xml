<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.appointment.AppointmentHistoryActivity">

    <!-- Custom AppBar TextView -->
    <TextView
        android:id="@+id/customAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:text="Lịch sử đặt lịch"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <!-- ListView for appointment info -->
    <ListView
        android:id="@+id/listViewAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customAppBar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="15dp"
    />


</RelativeLayout>
