<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.auth.UserProfileActivity"
    android:background="#c9c9c9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5CC09F">
            <ImageView
               android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView_profile_dp"
                android:layout_centerInParent="true"
                android:background="@drawable/no_profile_picture"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_show_welcome"
                android:layout_below="@id/imageView_profile_dp"
                android:hint="Loading..."
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">
        <!--show name  -->
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_profile"
            android:background="@drawable/user"/>
        <TextView
            android:id="@+id/textView_show_full_name"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/ic_profile"
            android:layout_marginStart="50dp"
            android:hint="Loading"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView_show_full_name"
            android:background="@android:color/darker_gray"
            android:id="@+id/divider_name"/>
            <!--show email  -->
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_email"
            android:background="@drawable/email"
            android:layout_below="@id/divider_name"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textView_show_email"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/ic_email"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/divider_name"
            android:hint="Loading"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView_show_email"
            android:background="@android:color/darker_gray"
            android:id="@+id/divider_email"/>

            <!--show dob  -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_dob"
                android:background="@drawable/cake"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/textView_show_dob"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/divider_email"
                android:hint="Loading"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView_show_dob"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider_dob"/>
            <!--show address  -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_address"
                android:background="@drawable/pin2"
                android:layout_below="@id/divider_dob"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/textView_show_address"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/divider_dob"
                android:hint="Loading"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView_show_address"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider_address"/>
            <!--show phone  -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_phone"
                android:background="@drawable/call"
                android:layout_below="@id/divider_address"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/textView_show_phone"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/divider_address"
                android:hint="Loading"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView_show_phone"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider_phone"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>